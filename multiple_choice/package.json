{
    "name": "virtuarama-multiple-choice-typescript",
    "version": "1.0.0",
    "description": "TypeScript Multiple Choice Assessment Platform - Dynamic test selection with type safety",
    "main": "server.js",
    "scripts": {
        "dev": "node scripts/dev-runner.js",
        "dev:client": "vite",
        "build": "pnpm run build:client && tsc -p tsconfig.server.json",
        "build:watch": "vite build --watch & tsc -p tsconfig.server.json --watch",
        "build:client": "vite build",
        "preview": "vite preview",
        "test:unit": "vitest",
        "test:unit:coverage": "vitest run --coverage",
        "test:unit:ui": "vitest --ui",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --fix",
        "format": "prettier --write src/",
        "clean": "rm -rf dist/",
        "start": "pnpm run build && node dist/server.js"
    },
    "keywords": [
        "typescript",
        "javascript",
        "assessment",
        "multiple-choice",
        "coderbyte",
        "interview-prep",
        "type-safe"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.7.8",
        "express": "^4.21.2",
        "open": "^8.4.2",
        "pinia": "^2.2.6",
        "vue": "^3.5.12",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.0",
        "@types/express": "^4.17.21",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.8.1",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vitest/coverage-v8": "^4.0.5",
        "@vitest/eslint-plugin": "1.1.7",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "chokidar": "^3.5.3",
        "concurrently": "^9.0.1",
        "eslint": "^9.14.0",
        "eslint-plugin-vue": "^9.30.0",
        "http-proxy-middleware": "^2.0.6",
        "jsdom": "^25.0.1",
        "nodemon": "^3.1.7",
        "npm-run-all2": "^7.0.1",
        "prettier": "^3.3.3",
        "sass": "^1.69.5",
        "sass-embedded": "^1.81.0",
        "typescript": "~5.6.3",
        "vite": "^5.4.10",
        "vite-plugin-vue-devtools": "^7.5.4",
        "vitest": "^4.0.5",
        "vue-tsc": "^2.1.10"
    }
}