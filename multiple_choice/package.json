{
    "name": "coderbyte-multiple-choice-typescript",
    "version": "1.0.0",
    "description": "TypeScript Multiple Choice Assessment Platform - Dynamic test selection with type safety",
    "main": "server.js",
    "scripts": {
        "build": "npm run build:client && tsc -p tsconfig.server.json",
        "build:watch": "vite build --watch & tsc -p tsconfig.server.json --watch",
        "build:client": "vite build",
        "dev:client": "vite",
        "dev": "node scripts/dev-runner.js",
        "dev:nodemon": "npm run build && npx nodemon --legacy-watch --watch dist/server.js dist/server.js",
        "dev:once": "npm run build && node dist/server.js",
        "start": "npm run build && node dist/server.js",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist/"
    },
    "keywords": [
        "typescript",
        "javascript",
        "assessment",
        "multiple-choice",
        "coderbyte",
        "interview-prep",
        "type-safe"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.21.2",
        "open": "^8.4.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^22.8.1",
        "@vitest/coverage-v8": "^1.6.0",
        "chokidar": "^3.5.3",
        "concurrently": "^9.0.1",
        "http-proxy-middleware": "^2.0.6",
        "jsdom": "^22.1.0",
        "nodemon": "^3.1.7",
        "typescript": "^5.6.3",
        "vite": "^5.1.0",
        "vitest": "^1.6.0"
    }
}